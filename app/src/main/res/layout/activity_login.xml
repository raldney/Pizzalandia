<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="io.github.raldney.pizzalandia.Activities.MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        app:srcCompat="@drawable/pizzalandia"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="36dp" />

    <EditText
        android:id="@+id/login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Login"
        android:layout_below="@+id/imageView2"
        android:layout_alignStart="@+id/password_text"
        android:layout_alignEnd="@+id/password_text" />

    <EditText
        android:id="@+id/password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Password"
        android:layout_marginLeft="157dp"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/login_text"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/login_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/password_text"
        android:layout_below="@+id/password_text"
        android:layout_marginTop="22dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="@string/login_button" />

    <Button
        android:id="@+id/cancel_login_button"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/login_button"
        android:layout_alignStart="@+id/password_text"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="@string/signup_button"
        android:textColor="@android:color/holo_orange_light" />

</RelativeLayout>